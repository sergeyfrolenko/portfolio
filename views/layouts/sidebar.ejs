        <label for="login_login">Login</label>
        <br />
        <input type="text" id="login_login" name="login" />
      </div>
      <div class="Auth-field">
        <label for="pass_login">Password</label>
        <br />
        <input type="text" id="pass_login" name="pass" />
      </div>
      <div class="Auth-buttons">
        <div class="Auth-btn">
          <button type="submit">Log in</button>
        </div>
        <div class="Auth-btn">
          <button type="signin" class="switch-button">Sign in</button>
        </div>
      </div>
    </form>
  </div>
